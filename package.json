{
  "name": "edusync-secure",
  "version": "1.0.0",
  "description": "EduSync - Educational platform with wallet and marketplace functionality",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm start",
    "client": "cd client && npm run dev",
    "build": "npm install",
    "install-deps": "cd backend && npm install && cd ../client && npm install",
    "heroku-postbuild": "cd backend && npm install && cd ../client && npm install && npm run build"
  },
  "keywords": [
    "education",
    "marketplace",
    "wallet",
    "react",
    "nodejs",
    "postgresql"
  ],
  "author": "ahnafwolfy007",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "concurrently": "^8.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "sharp": "^0.32.4",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahnafwolfy007/edusync_security.git"
  }
}
